@model MyBlog.Models.Post

@{
    ViewData["Title"] = "Delete";
}

<h3>Are you sure you want to delete this post, it belongs to @Html.DisplayFor(model => model.Owner.UserName)?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Owner
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Owner.UserName)
        </dd>
        <dt>
            Title
        </dt>
        <dd>
            <b>@Html.DisplayFor(model => model.Title)</b>     
        </dd>
        <dt>
            Posted at
        </dt>
        <dd>
            @Html.DisplayFor(model => model.CreationDate)
        </dd>
        <dt>
            Story/Content
        </dt>
        <dd>
            @Html.DisplayFor(model => model.PostValue)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-default" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
