@model MyBlog.Models.PostViewModels.PostDetailsViewModel

@{
    ViewData["Title"] = "Details";
}
<div class="container">
    <div class="row">
        <div class="col-sm-8">
            <h2 class="blog-post-title">@Html.DisplayFor(model => model.Post.Title)</h2>
            <p class="blog-post-meta">
                By <b>@Html.DisplayFor(model => model.Post.Owner.UserName)</b>,
                @Html.DisplayFor(model => model.Post.CreationDate)
            </p>
            <p class="blog-post-content">@Html.DisplayFor(model => model.Post.PostValue)</p>
        </div>
    </div>
    <hr />
    <div id="comments" class="comments">
        <div class="row">
            <div id="respond" class="col-md-4">
                <h4>Join the conversation?</h4>
                <form asp-action="Details">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="PostId" value="@Model.Post.Id" />
                    <div class="form-group">
                        <label asp-for="CommentValue" class="control-label"></label>
                        <textarea asp-for="CommentValue" class="form-control"></textarea>
                        <span asp-validation-for="CommentValue" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Comment" class="btn btn-default" />
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div>
        <div class="row">
            <div class="dl-horizontal">
                @foreach (Comment comment in Model.Comments)
                {
                    <hr />
                    <p style="color:#105ab2;font-weight:bold">@Html.DisplayFor(model => comment.Owner.UserName),<br /> @Html.DisplayFor(model => comment.CreationDate)</p>
                    <p>@Html.DisplayFor(model => comment.CommentValue)</p>
                }

            </div>
        </div>
    </div>
</div>


