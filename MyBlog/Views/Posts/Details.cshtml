@model MyBlog.Models.PostViewModels.PostDetailsViewModel

@{
    ViewData["Title"] = "Details";
}

<h2>Details</h2>

<div>
    <h4>Post</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Post.Title)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Post.Title)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Post.PostValue)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Post.PostValue)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Post.Owner.UserName)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Post.Owner.UserName)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Post.CreationDate)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Post.CreationDate)
        </dd>
    </dl>
</div>
<hr />
<section id="comments" class="comments">
    <div class="row">
        <div id="respond" class="col-md-4">
            <h5>Leave a comment</h5>
            <form asp-action="Details">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="PostId" value="@Model.Post.Id" />
                <div class="form-group">
                    <label asp-for="CommentValue" class="control-label"></label>
                    <textarea asp-for="CommentValue" class="form-control"></textarea>
                    <span asp-validation-for="CommentValue" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Comment" class="btn btn-default" />
                </div>
            </form>
        </div>
    </div>
</section>
<hr />
<section>
    <div class="row">
        <div class="dl-horizontal">
            @foreach (Comment comment in Model.Comments)
            {
                <label>@Html.DisplayFor(model => comment.Owner.UserName)</label>
                <label>@Html.DisplayFor(model => comment.CreationDate)</label>
                <p>@Html.DisplayFor(model => comment.CommentValue)</p>
            }
        </div>
    </div>
</section>
<hr />
<div>
    <a asp-action="Edit" asp-route-id="@Model.Post.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
